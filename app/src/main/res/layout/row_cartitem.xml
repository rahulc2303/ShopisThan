<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_blue"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemTitleTv"
        android:textColor="@color/black"
        android:text="Item Title"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemPriceTv"
        android:textColor="@color/black"
        android:text="10"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/itemTitleTv"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTitleTv"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemPriceEachTv"
            android:gravity="center"
            android:textSize="20dp"
            android:text="10/q"
            android:textColor="@color/black"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemQuantityTv"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:text="[2]"
            android:textColor="@color/black"

            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemRemoveTv"
        android:layout_alignParentEnd="true"
        android:text="Remove"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:layout_below="@id/itemTitleTv"

        />

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="4dp"
    android:background="@color/green"
    android:layout_below="@id/itemRemoveTv"
    />



</RelativeLayout>