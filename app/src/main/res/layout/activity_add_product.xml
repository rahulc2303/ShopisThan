<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".AddProductActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/select_product_image"
        android:cropToPadding="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_add_a_photo_24"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_name"
        android:layout_below="@id/select_product_image"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product Name..........."
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:textColorHint="@color/white"


        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_description"
        android:layout_below="@id/product_name"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product Description..........."
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_category"
        android:layout_below="@id/product_description"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:hint="Category"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_category"
            android:layout_below="@id/product_category"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:hint="Gender"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:background="@drawable/custom_input"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_price"
        android:layout_below="@id/gender_category"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:padding="20dp"
        android:hint="Product Price..........."
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        />



    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/discountSwitch"
        android:layout_below="@id/product_price"
        android:text="Discount"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:paddingStart="20dp"
        android:textSize="18sp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discountProduct_price"
        android:layout_below="@id/discountSwitch"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:padding="20dp"
        android:hint="Discount Price"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="gone"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addpro"
        android:layout_below="@id/discountProduct_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="ADD PRODUCT"
        android:background="@drawable/custom_input"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_addProduct"
            style="?android:attr/progressBarStyle"
            android:layout_below="@+id/discountProduct_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
              android:visibility="invisible"
            />


    </RelativeLayout>

</ScrollView>